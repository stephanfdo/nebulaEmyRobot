<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

 <!--recycler view to display our chats-->
 <pl.droidsonroids.gif.GifImageView
     android:id="@+id/gifImageView1"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:src="@drawable/welcome"
     />

 <pl.droidsonroids.gif.GifImageView
     android:id="@+id/gifImageView"
     android:layout_width="match_parent"
     android:layout_height="583dp"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginEnd="0dp"
     android:layout_marginBottom="0dp"
     android:paddingLeft="-40dp"
     android:paddingRight="-40dp"
     android:src="@drawable/audio" />


 <ImageView
     android:id="@+id/welcomeimg"
     android:layout_width="1030dp"
     android:layout_height="456dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginTop="68dp"
     android:layout_marginEnd="80dp"
     android:layout_marginBottom="303dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:srcCompat="@drawable/come"
     />


 <ImageView
     android:id="@+id/litening"
     android:layout_width="259dp"
     android:layout_height="268dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginTop="499dp"
     android:layout_marginEnd="505dp"
     android:layout_marginBottom="60dp"
     app:srcCompat="@drawable/listening" />

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="center">

 <TextView
     android:id="@+id/idtextview"
     android:layout_width="wrap_content"
     android:layout_height="535dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginStart="139dp"
     android:layout_marginTop="100dp"
     android:layout_marginEnd="152dp"
     android:gravity="center"
     android:textColor="#FFEAE4"
     android:textSize="70sp"
     android:layout_marginBottom="200dp"
     android:shadowColor="#FC6A42"
     android:shadowDx="8"
     android:shadowDy="8"
     android:shadowRadius="8"
     android:fontFamily="@font/font_family"
     />
 </ScrollView>


 <ImageView
     android:id="@+id/technologo"
     android:layout_width="267dp"
     android:layout_height="180dp"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginEnd="65dp"
     android:layout_marginBottom="-3dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.958"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="@+id/gifImageView"
     app:layout_constraintVertical_bias="1.0"
     app:srcCompat="@drawable/techno" />

 <ImageView
     android:id="@+id/technologo2"
     android:layout_width="333dp"
     android:layout_height="202dp"
     android:layout_alignParentEnd="true"
     android:layout_alignParentBottom="true"
     android:layout_marginEnd="469dp"
     android:layout_marginBottom="625dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.958"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="@+id/gifImageView"
     app:layout_constraintVertical_bias="1.0"
     app:srcCompat="@drawable/nebulalogo" />

 <SlidingDrawer
     android:id="@+id/slidingdrawer"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:content="@+id/content"
     android:handle="@+id/handle"
     android:orientation="horizontal"
     android:rotation="180"
     tools:ignore="MissingConstraints"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp">
  <!-- Button for the handle of SlidingDrawer -->
  <Button
      android:id="@id/handle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/slide"
      android:textColor="#fff"
      android:rotation="180"/>

  <!-- layout for the content of the SLidingDrawer -->
  <LinearLayout
      android:background=" #162191"
      android:id="@id/content"
      android:layout_width="300dp"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:rotation="180">

   <!-- DEFINE ALL YOUR CONTENT,WIDGETS HERE WHICH YOU WANT TO ADD IN SLIDING DRAWER LAYOUT. -->
   <Button
       android:id="@+id/exitButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="80dp"
       android:background="#ffff"
       android:text="EXIT" />

   <Button
       android:id="@+id/backbutton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="70dp"
       android:layout_marginLeft="10dp"
       android:background="#ffff"
       android:text="Start" />

  </LinearLayout>
 </SlidingDrawer>
</RelativeLayout>
